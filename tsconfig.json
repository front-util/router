{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "target": "esnext",
    "module": "ESNext",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "paths": {
      "#src/*": [
        "./src/*"
      ],
    },
    "types": [
      "./src/index.d.ts",
      "node",
      "bun"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    ".vscode"
  ],
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "./src/index.d.ts"
  ]
}