{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "types": [
      "node",
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    ".vscode",
    "./examples"
  ],
  "include": [
    "./src/**/*",
    "./vitest.config.ts"
  ]
}